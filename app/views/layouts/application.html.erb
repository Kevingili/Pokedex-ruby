<!DOCTYPE html>
<html>
  <head>
    <title>Pokedex</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
  <div class="container">
    <p>
      <%= link_to 'Pokemons', pokemons_path, class: 'btn btn-default' %>
      <%= link_to 'Types', types_path, class: 'btn btn-default' %>
      <%= link_to 'Attaques', moves_path, class: 'btn btn-default' %>

      <% if user_signed_in? %>
        Connecté en tant que <%= link_to current_user.username, edit_user_registration_path %> - <%= link_to 'Déconnexion', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
      <% else %>
        <%= link_to 'connexion', new_user_session_path, class: 'btn btn-default' %>
      <% end %>
    </p>

    <% flash.each do | name, msg| %>
      <div class="alert alert-<%= name %>">
        <a class="close" data-dismiss="alert">x</a>
        <%= content_tag :div, msg, id: "flash_#{name}" %>      
      </div>
    <% end %>

    <br>
    <%= yield %>
  </div>
  </body>
</html>
